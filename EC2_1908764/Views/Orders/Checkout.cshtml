@model Orders
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var photoPath = "~/images/phones/" + (Model.ItemPic ?? "noimage.png");
}

<h1 class="text-center">Checkout</h1>
<hr />

<div class="row">
    <div class="col-lg-6 container-fluid h-100">
        <div class="justify-content-center align-items-center h-100">
            <img class="img-fluid" src="@photoPath" asp-append-version="true" />
        </div>
    </div>
    <div class="col-lg-6">
        <h1 class="pb-md-5 pt-md-3">@Html.DisplayFor(model => model.Item)</h1>
        <form enctype="multipart/form-data" asp-action="Checkout">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="SKU" hidden />
            <input asp-for="Item" hidden />
            <input asp-for="ItemPic" hidden />
            <div class="form-group pb-3">
                <h6><label asp-for="Quantity"></label></h6>
                <input asp-for="Quantity" type="number" value=1 class="form-control col-sm-2">
            </div>
            <div class="form-group ">
                <h6><label asp-for="Name"></label></h6>
                <input asp-for="Name" type="text" placeholder="Enter Receipient Name" class="form-control col-sm-8">
            </div>
            <div class="form-group ">
                <h6><label asp-for="Country"></label></h6>
                <input asp-for="Country"  type="text" placeholder="Enter Country" class="form-control col-sm-8">
            </div>
            <div class="form-group ">
                <h6><label asp-for="Address"></label></h6>
                <textarea asp-for="Address" type="text" rows="3" placeholder="Enter Receipient Name" class="form-control col-sm-8"></textarea>
            </div>
            <div class="form-group ">
                <h6><label asp-for="PhoneNumber"></label></h6>
                <input asp-for="PhoneNumber"  type="tel" placeholder="876-123-4567" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"  class="form-control col-sm-8"> 
            </div>
            <div class="form-group pt-3 ">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input asp-for="Price"  type="text" readonly class="form-control col-sm-7">
                </div>
            </div>
            <div class="form-group row">
                <a asp-action="Details" asp-controller="Phones" asp-route-id="@Model.SKU" class="btn btn-info btn-lg mr-4"> << Return</a>
                <input type="submit" value="Purchase" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>
